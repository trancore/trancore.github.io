{
  "env": {
    // ブラウザ対応
    "browser": true,
    // ES2021に対応
    "es2021": true
  },
  "extends": [
    // ESLintの推奨設定
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {}
}
