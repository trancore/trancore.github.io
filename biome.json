{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "includes": [
      "src/**",
      "codegen.ts",
      "!old/**",
      "!src/routeTree.gen.ts",
      "!src/graphql/github/query-generated/**",
      "!**/*.graphql"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "includes": [
      "src/**",
      "codegen.ts",
      "!old/**",
      "!src/routeTree.gen.ts",
      "!src/graphql/github/query-generated/**",
      "!**/*.graphql"
    ],
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": ["classList"],
            "functions": ["cn"]
          }
        }
      }
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              [":THIRD_PARTY:", "@*/**"],
              ":BLANK_LINE:",
              "~/**"
            ]
          }
        }
      }
    }
  }
}
